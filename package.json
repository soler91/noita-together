{
  "name": "nt-app",
  "version": "0.10.0",
  "author": "Soler91",
  "description": "Allows you to play noita with friends.",
  "private": true,
  "main": "dist/electron/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit -p tsconfig.node.json --composite false && vue-tsc --noEmit && vite build && electron-builder --config .electron-builder.config.js",
    "build-force": "vite build && electron-builder --config .electron-builder.config.js",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "type-gen": "protoc --ts_out . --proto_path public public/messages.proto"
  },
  "dependencies": {
    "@protobuf-ts/plugin": "^2.7.0",
    "dexie": "^3.2.2",
    "electron-better-ipc": "^2.0.1",
    "electron-updater": "5.0.5",
    "got": "^12.1.0",
    "keytar": "^7.9.0",
    "uuid": "^8.3.2",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.1.1",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@vitejs/plugin-vue": "^3.0.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "electron": "^19.0.8",
    "electron-builder": "^23.1.0",
    "eslint": "8.20.0",
    "eslint-plugin-vue": "9.2.0",
    "pinia": "^2.0.16",
    "typescript": "^4.7.4",
    "vite": "3.0.2",
    "vite-plugin-electron": "^0.8.0",
    "vue": "^3.2.37",
    "vue-router": "^4.1.2",
    "vue-tsc": "^0.38.9",
    "vue3-popper": "^1.5.0"
  },
  "env": {
    "VITE_DEV_SERVER_HOST": "127.0.0.1",
    "VITE_DEV_SERVER_PORT": 3344
  }
}
